<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:layout_centerVertical="true"
    tools:context=".explanation.MainWelcomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/dotsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:background="#00FFFFFF"
            android:padding="10dp">

            <ImageView
                android:id="@+id/dot_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="7dp"
                android:background="@drawable/active_dot" />

            <ImageView
                android:id="@+id/dot_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:background="@drawable/inactive_dot" />

            <ImageView
                android:id="@+id/dot_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:background="@drawable/inactive_dot" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mainPager"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@id/dotsLayout"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp">

        </androidx.viewpager.widget.ViewPager>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_buttons"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:layout_below="@id/mainPager"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/register"
                android:layout_width="121dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="45dp"
                android:background="@drawable/women_category_background"
                android:fontFamily="@font/nunito_semibold"
                android:padding="10dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textColor="@color/navigationBar"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/login"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.228" />

            <Button
                android:id="@+id/login"
                android:layout_width="121dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/women_category_background"
                android:fontFamily="@font/nunito_semibold"
                android:padding="10dp"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="@color/navigationBar"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/register"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.228" />

            <Switch
                android:id="@+id/customer_or_company_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:text="Do you own a store?"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/register" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/welcome_signed_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/bottom_buttons"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:text="you already signed in as *** "
            android:visibility="invisible"
            android:textColor="#FF0000"/>

        <Button
            android:id="@+id/welcome_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_signed_in"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/women_category_background"
            android:text="log out"
            android:textAllCaps="false"
            android:visibility="invisible" />

    </RelativeLayout>



</FrameLayout>