<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LandingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_above="@id/loader"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:contentDescription="@string/logo"
        android:padding="5dp"
        android:src="@drawable/tooki"
        android:transitionName="@string/tooki" />

    <TextView
        android:id="@+id/shopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="145dp"
        android:fontFamily="cursive"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/app_name"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="65sp"
        android:textStyle="bold"
        android:transitionName="@string/app_name"/>

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:tashieloader_animDelay="70"
        app:tashieloader_animDur="500"
        app:tashieloader_dotsColor="@color/SplashScreenBackground"
        app:tashieloader_dotsDist="12dp"
        app:tashieloader_dotsRadius="5dp"
        app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
        app:tashieloader_noOfDots="6" />

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/powered_by_eitan_goren"
        android:textAlignment="center"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="14sp"/>

</RelativeLayout>