<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/tooki7">

    <TextView
        android:id="@+id/shopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/roboto_thin"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/app_name"
        android:textColor="#000000"
        android:textSize="85sp"
        android:transitionName="@string/app_name" />

    <TextView
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopik"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_thin"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:text="@string/make_shopping_great_again"
        android:textColor="#000000"
        android:textSize="40sp" />

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/slogan"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        app:tashieloader_animDelay="60"
        app:tashieloader_animDur="500"
        app:tashieloader_dotsColor="#6640B1"
        app:tashieloader_dotsDist="12dp"
        app:tashieloader_dotsRadius="7dp"
        app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
        app:tashieloader_noOfDots="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/powered_by_eitan_goren"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>