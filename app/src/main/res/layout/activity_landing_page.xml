<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LandingLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="145dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:contentDescription="@string/logo"
            android:padding="5dp"
            android:src="@drawable/tooki" />

        <TextView
            android:id="@+id/shopik"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="cursive"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:text="@string/app_name"
            android:textColor="@color/SplashScreenBackground"
            android:textSize="65sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <com.agrawalsuneet.dotsloader.loaders.TashieLoader
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:tashieloader_animDelay="80"
        app:tashieloader_animDur="480"
        app:tashieloader_dotsColor="@color/SplashScreenBackground"
        app:tashieloader_dotsDist="10dp"
        app:tashieloader_dotsRadius="5.5dp"
        app:tashieloader_interpolator="@android:anim/accelerate_interpolator"
        app:tashieloader_noOfDots="6" />

    <TextView
        android:id="@+id/copyright_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/nunito_semibold"
        android:text="@string/powered_by_eitan_goren"
        android:textAlignment="center"
        android:textColor="@color/SplashScreenBackground"
        android:textSize="13sp"/>

</RelativeLayout>