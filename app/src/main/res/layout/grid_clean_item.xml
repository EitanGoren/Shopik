<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="20dp"
    android:translationZ="20dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF">

        <RelativeLayout
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="#00FFFFFF">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/image_item"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/fullscreen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:background="#00FFFFFF" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_margin="2dp"
            android:orientation="vertical">

             <RelativeLayout
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:layout_gravity="center"
                 android:padding="5dp"
                 android:background="@color/fui_transparent">

                 <LinearLayout
                     android:id="@+id/dots_layouts"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_centerInParent="true"
                     android:padding="5dp">

                     <ImageView
                         android:id="@+id/fullscreen_dot_1"
                         android:layout_width="10dp"
                         android:layout_height="10dp"
                         android:layout_marginStart="7dp"
                         android:layout_marginEnd="7dp"
                         android:contentDescription="@string/dot" />

                     <ImageView
                         android:id="@+id/fullscreen_dot_2"
                         android:layout_width="10dp"
                         android:layout_height="10dp"
                         android:layout_marginStart="7dp"
                         android:layout_marginEnd="7dp"
                         android:contentDescription="@string/dot" />

                     <ImageView
                         android:id="@+id/fullscreen_dot_3"
                         android:layout_width="10dp"
                         android:layout_height="10dp"
                         android:layout_marginStart="7dp"
                         android:layout_marginEnd="7dp"
                         android:contentDescription="@string/dot" />

                     <ImageView
                         android:id="@+id/fullscreen_dot_4"
                         android:layout_width="10dp"
                         android:layout_height="10dp"
                         android:layout_marginStart="7dp"
                         android:layout_marginEnd="7dp"
                         android:contentDescription="@string/dot" />

                 </LinearLayout>

                 <Button
                     android:id="@+id/next"
                     android:layout_width="22dp"
                     android:layout_height="22dp"
                     android:layout_toEndOf="@id/dots_layouts"
                     android:layout_marginStart="15dp"
                     android:background="@drawable/ic_baseline_arrow_forward_24"
                     android:padding="10dp"/>

                 <Button
                     android:layout_width="22dp"
                     android:layout_height="22dp"
                     android:id="@+id/previous"
                     android:background="@drawable/ic_baseline_arrow_back_24"
                     android:layout_marginEnd="15dp"/>

             </RelativeLayout>

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nobile"
                android:padding="2dp"
                android:textAlignment="textStart"
                android:textColor="#2E2E2E"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/brand_name"
                android:transitionName="company_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nobile"
                android:padding="2dp"
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/nobile"
                    android:padding="2dp"
                    android:textAlignment="textStart"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/sale_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="2dp"
                    android:textAlignment="textStart"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nobile"
                android:padding="2dp"
                android:textAlignment="textStart"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/percentage_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nobile"
                    android:padding="2dp"
                    android:textAlignment="textStart"
                    android:textSize="13sp"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="2dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/liked_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawablePadding="7dp"
                android:fontFamily="@font/nobile"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textColor="#FF57D8"
                android:drawableEnd="@drawable/ic_favorite_black_24dp"
                android:textSize="13sp"
                app:drawableTint="#FF57D8" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seller_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:layout_alignStart="@id/image"
            android:layout_alignTop="@id/image"
            android:padding="5dp"
            android:elevation="1.4dp"
            android:transitionName="company_logo"
            android:scaleType="centerCrop"
            android:translationZ="1.8dp"/>

        <Button
            android:id="@+id/list_item_buy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_layout"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nobile"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="@string/go_to_store"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="14sp"
            android:theme="@style/GridBuyButtons"
            android:elevation="5dp"
            android:translationZ="5dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>