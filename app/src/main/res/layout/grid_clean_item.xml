<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="20dp"
    android:translationZ="20dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/image_viewPager"
            android:layout_width="match_parent"
            android:layout_height="220dp" />

        <Button
            android:id="@+id/fullscreen_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignEnd="@id/image_viewPager"
            android:layout_alignBottom="@id/image_viewPager"
            android:background="@drawable/ic_fullscreen_black"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:translationZ="10dp"/>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image_viewPager"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nobile"
                android:padding="2dp"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="2dp"
                    android:fontFamily="@font/nobile"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/sale_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textSize="16sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nobile"
                android:padding="2dp"
                android:textAlignment="viewStart"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/percentage_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nobile"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textSize="13sp"
                    android:visibility="invisible"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="15sp"
                    android:visibility="invisible"
                    tools:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/liked_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableEnd="@drawable/ic_favorite_black_24dp"
                android:drawablePadding="7dp"
                android:drawableTint="#FF57D8"
                android:fontFamily="@font/nobile"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textColor="#FF57D8"
                android:textSize="13sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/image_viewPager"
            android:layout_alignTop="@id/image_viewPager"
            android:orientation="horizontal"
            android:padding="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/seller_logo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:elevation="1.8dp"
                android:scaleType="centerCrop"
                android:translationZ="1.8dp"/>

            <TextView
                android:id="@+id/seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/nobile"
                android:textColor="#2E2E2E"
                android:textSize="12sp" />

        </LinearLayout>

        <Button
            android:id="@+id/list_item_buy_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_layout"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nobile"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="GO TO STORE"
            android:textAllCaps="true"
            android:textColor="#000000"
            android:textSize="14sp"
            android:theme="@style/GridBuyButtons"
            android:elevation="5dp"
            android:translationY="5dp"
            android:translationZ="5dp" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>