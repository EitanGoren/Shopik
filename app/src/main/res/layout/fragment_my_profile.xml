<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Company.CompanyProfileActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/company_appbar"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true"
        android:layout_height="250dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/company_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:title="Name"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:expandedTitleGravity="left|bottom"
            app:collapsedTitleGravity="left"
            app:expandedTitleMarginEnd="65dp"
            app:expandedTitleMarginStart="30dp">

            <ImageView
                android:id="@+id/company_bgImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@null"
                android:minHeight="100dp"
                android:background="@color/fragmentBackground"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap"
                app:expandedTitleTextAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"/>

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:layout_collapseMode="pin">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/company_toolbar_pic"
                    android:layout_width="50sp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    app:layout_collapseMode="parallax"
                    android:layout_centerVertical="true"
                    app:civ_border_color="#ffffff"
                    app:civ_border_width="2dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rating_num"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:visibility="invisible"/>

                    <RatingBar
                        android:id="@+id/toolbar_rating"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:numStars="5"
                        android:layout_height="wrap_content"
                        android:theme="@style/RatingBarLight"
                        android:layout_marginEnd="10dp"
                        style="?attr/ratingBarStyleSmall"
                        android:visibility="invisible" />

                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_company_profile"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="end|bottom"
                android:layout_marginBottom="20dp"
                android:elevation="15dp"
                android:translationZ="15dp"
                android:alpha="45"
                app:layout_collapseMode="parallax"
                android:transitionName="company_logo"
                app:civ_border_color="@color/CompanyProfileScrim"
                app:civ_border_width="2dp"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:id="@+id/jojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RatingBar
                android:id="@+id/company_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:theme="@style/RatingBarDark"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/company_raters_text"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginEnd="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/company_rating"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/company_slogan"
                android:layout_width="match_parent"
                android:padding="7dp"
                android:textStyle="italic"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_raters_text"
                android:fontFamily="cursive"
                android:textSize="35sp"/>

       <!--     <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_video_company"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/company_slogan"/>

            <TextView
                android:id="@+id/company_video_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textStyle="italic"
                android:layout_marginTop="3dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:layout_below="@id/youtube_video_company"
                android:fontFamily="casual"
                android:textSize="15sp"/> -->

            <LinearLayout
                android:id="@+id/social"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_slogan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/company_facebook"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp" />

                <ImageView
                    android:id="@+id/company_twitter"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/company_facebook" />

                <ImageView
                    android:id="@+id/company_youtube"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_toEndOf="@id/company_twitter" />

                <ImageView
                    android:id="@+id/company_instagram"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toEndOf="@id/company_youtube" />

                <ImageView
                    android:id="@+id/company_site"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/company_instagram" />

            </LinearLayout>

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:labelFor="@id/description"
                android:layout_marginStart="25dp"
                android:textStyle="bold"
                android:textSize="30sp"
                android:text="About us"
                android:layout_below="@id/social"
                android:layout_marginTop="25dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_below="@id/label"
                android:layout_marginBottom="5dp"
                android:textSize="24sp"
                android:padding="20dp"/>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>