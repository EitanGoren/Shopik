<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/SignInColor">

    <RelativeLayout
        android:id="@+id/lines_layout"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/line1"
            android:layout_width="220dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/line_horizontal4" />

        <TextView
            android:id="@+id/line2"
            android:layout_width="95dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/line1"
            android:background="@drawable/line_horizontal3" />

        <TextView
            android:id="@+id/line3"
            android:layout_width="150dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/line2"
            android:background="@drawable/line_horizontal5" />

        <TextView
            android:id="@+id/line4"
            android:layout_width="55dp"
            android:layout_height="22dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/line3"
            android:background="@drawable/line_horizontal6" />

    </RelativeLayout>

    <TextView
        android:id="@+id/shopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/google_card"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="cursive"
        android:text="Shopik \n Signin"
        android:textColor="#000000"
        android:textSize="95dp"
        android:textStyle="bold" />


    <androidx.cardview.widget.CardView
        android:id="@+id/google_card"
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:cardCornerRadius="20dp"
        android:layout_below="@id/lines_layout"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp">

        <Button
            android:id="@+id/google_sign_in"
            style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/comfortaa"
            android:text="Signin with Google"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="16sp"
            android:theme="@style/FirebaseUI.Button.AccountChooser.GoogleButton" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/facebook_card"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@id/google_card"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="20dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/facebook_sign_in"
            style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:fontFamily="@font/comfortaa"
            android:text="Signin with Facebook"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:theme="@style/FirebaseUI.Button.AccountChooser.FacebookButton" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/hello_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:id="@+id/bot_lines"
        android:layout_width="187dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/bot_line1"
            android:layout_width="90dp"
            android:layout_height="22dp"
            android:layout_above="@id/bot_line2"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/line_horizontal1" />

        <TextView
            android:id="@+id/bot_line2"
            android:layout_width="185dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_horizontal2" />

    </RelativeLayout>

</RelativeLayout>