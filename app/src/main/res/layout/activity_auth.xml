<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/shopik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="cursive"
        android:text="@string/welcome_to_shopik"
        android:textColor="#000000"
        android:textSize="50sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_above="@id/shopik"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/tooki"
        android:contentDescription="@string/logo"
        android:transitionName="tooki" />


    <Button
        android:id="@+id/google_sign_in"
        style="@style/EntranceButtons"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/shopik"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="@string/signin_with_google"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:theme="@style/FirebaseUI.Button.AccountChooser.GoogleButton" />

    <Button
        android:id="@+id/facebook_sign_in"
        style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/google_sign_in"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="@string/signin_with_facebook"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:theme="@style/FirebaseUI.Button.AccountChooser.FacebookButton" />

    <Button
        android:id="@+id/email_sign_in"
        style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/facebook_sign_in"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="@string/signin_with_email"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:theme="@style/FirebaseUI.Button.AccountChooser.EmailButton" />

</RelativeLayout>