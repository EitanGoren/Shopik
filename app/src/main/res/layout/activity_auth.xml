<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg8"
    android:layout_centerInParent="true">

        <TextView
            android:id="@+id/shopik"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="cursive"
            android:text="Welcome to Shopik"
            android:textColor="#000000"
            android:textSize="53sp"
            android:textStyle="bold" />

    <ImageView
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_above="@id/shopik"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="15dp"
        android:src="@drawable/tooki"
        android:transitionName="tooki"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/google_card"
            android:layout_width="280dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:elevation="10sp"
            android:translationZ="10sp">

            <Button
                android:id="@+id/google_sign_in"
                style="@style/FirebaseUI.Button.AccountChooser.GoogleButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/comfortaa"
                android:text="Signin with Google"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="16sp"
                android:theme="@style/FirebaseUI.Button.AccountChooser.GoogleButton" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/facebook_card"
            android:layout_width="280dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:elevation="10sp"
            android:translationZ="10sp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/facebook_sign_in"
                style="@style/FirebaseUI.Button.AccountChooser.FacebookButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:fontFamily="@font/comfortaa"
                android:text="Signin with Facebook"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:theme="@style/FirebaseUI.Button.AccountChooser.FacebookButton" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/email_card"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:elevation="10sp"
            android:translationZ="10sp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="20dp">

            <Button
                android:id="@+id/email_sign_in"
                style="@style/FirebaseUI.Button.AccountChooser.EmailButton"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="0dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="Signin with Email"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:theme="@style/FirebaseUI.Button.AccountChooser.EmailButton" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>