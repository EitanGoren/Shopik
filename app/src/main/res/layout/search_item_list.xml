<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <!--  <com.eitan.shopik.Adapters.NonSwipeableViewPager
        android:id="@+id/image_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="435dp"
        android:background="@drawable/top_border_line"
        android:paddingTop="2dp"/>  -->

    <RelativeLayout
        android:id="@+id/image_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="435dp"
        android:background="@drawable/top_border_line"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/previous"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="#00FFFFFF" />

        <Button
            android:id="@+id/next"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_centerVertical="true"
            android:background="#00FFFFFF"/>

    </RelativeLayout>

    <ImageButton
        android:id="@+id/fullscreen_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_fullscreen_black"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="7dp"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image_viewPager"/>

    <ImageView
        android:id="@+id/list_item_favourite_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_alignStart="@id/image_viewPager"
        android:layout_alignTop="@id/image_viewPager"
        android:src="@drawable/ic_favorite_black_24dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo"
        android:text="SALE"
        android:paddingStart="5dp"
        android:layout_marginEnd="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#FF0000"
        android:textSize="34sp"
        android:layout_alignTop="@id/image_viewPager"
        android:layout_alignEnd="@id/image_viewPager"
        android:translationZ="10dp"
        android:elevation="10dp"
        android:visibility="invisible"
        android:background="@color/colorTransparentWhite"/>

    <RelativeLayout
        android:id="@+id/item_info_social"
        android:layout_width="wrap_content"
        android:layout_height="92dp"
        android:layout_below="@id/image_viewPager"
        android:background="@drawable/textview_border_line" >

        <TextView
            android:id="@+id/seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:elegantTextHeight="true"
            android:fontFamily="@font/nunito_bold"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/updated_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/nunito_semibold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@id/updated_price"
            android:fontFamily="@font/nunito_semibold"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/item_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/list_item_buy_button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/list_item_buy_button"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:elevation="10dp"
            android:text="Shop"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationZ="10dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/outlet_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:translationZ="5dp"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:text="OUTLET"
        android:textAlignment="center"
        android:textSize="30sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/seller_logo2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_alignBottom="@id/image_viewPager"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-50dp"
        android:padding="10dp"
        app:civ_border_color="@color/borderLine"
        app:civ_border_width="2dp" />

</RelativeLayout>