<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="605dp"
    android:layout_gravity="center|bottom"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginBottom="-26dp"
    app:cardCornerRadius="20dp"
    android:backgroundTint="#00FFFFFF"
    android:backgroundTintMode="screen"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">

        <TextView
            android:id="@+id/new_items_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/items_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/new_items_header"
            android:fontFamily="@font/nunito_bold"
            android:layout_alignBottom="@id/new_items_header"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="7dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"/>

        <GridView
            android:id="@+id/new_items_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/new_items_header"
            android:numColumns="2"
            android:columnWidth="230dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="#00FFFFFF"
            android:layout_marginBottom="20dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="200dp"
            android:layout_height="15dp"
            android:visibility="invisible"
            tools:visibility="visible"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:indeterminate="true"
            android:layout_centerInParent="true">
        </ProgressBar>

    </RelativeLayout>

</androidx.cardview.widget.CardView>

