<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    tools:menu="@menu/menu_customer_toolbar">

    <androidx.cardview.widget.CardView
        android:id="@+id/ad_swipe_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/ad_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:fontFamily="@font/martel_sans"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/ad_media"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerVertical="true"
                android:background="#ffffff"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/ad_bottom_info_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom_info_border_line">

                <Button
                    android:id="@+id/ad_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="3dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/martel_sans"
                    android:text="Check it Now"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/ad_card_seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/ad_action_button"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/martel_sans"
                    android:padding="3dp"
                    android:textAlignment="viewStart"
                    android:textColor="#ffffff"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/AD"
                    style="@style/AppTheme.AdAttributionLarge"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="7dp"
                    android:layout_marginBottom="10dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/ad_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ad_bottom_info_layout"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/martel_sans"
                android:padding="3dp"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_alignBottom="@id/ad_media"
                android:layout_alignStart="@id/ad_media"/>

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_brand_name"
                android:fontFamily="@font/martel_sans"
                android:textColor="#000000"
                android:textAlignment="center"
                android:padding="5dp"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ad_card_seller_logo"
                android:layout_alignStart="@id/ad_card_seller_logo"
                android:layout_alignEnd="@id/ad_card_seller_logo"
                android:isIndicator="true"
                android:numStars="5"
                android:padding="5dp"
                android:stepSize="0.5"
                tools:visibility="visible"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ad_card_seller_logo"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="55dp"
                app:civ_border_color="@color/borderLine"
                android:elevation="10dp"
                android:translationZ="10dp"
                app:civ_border_width="2dp" />

        </RelativeLayout>

        <View
            android:id="@+id/item_swipe_right_indicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_margin="10dp"
            android:alpha="0" />

        <View
            android:id="@+id/item_swipe_left_indicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:alpha="0"
            android:fontFamily="@font/nunito_semibold" />

    </androidx.cardview.widget.CardView>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>