<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_centerInParent="true"
    tools:menu="@menu/menu_customer_toolbar">

    <androidx.cardview.widget.CardView
        android:id="@+id/ad_swipe_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:elevation="8dp"
        android:translationZ="8dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="525dp"
            android:layout_gravity="top"
            android:background="#00FFFFFF">

            <TextView
                android:id="@+id/ad_brand_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/brand_background"
                android:fontFamily="@font/nunito_semibold"
                android:paddingStart="15dp"
                android:paddingTop="5dp"
                android:paddingEnd="15dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/ad_bottom_info_layout"
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bottom_info_border_line">

                <Button
                    android:id="@+id/ad_action_button"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="click"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ad_sponsored"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toStartOf="@id/ad_action_button"
                    android:layout_toEndOf="@id/ad_sponsored"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ad_card_seller_name"
                    android:layout_width="230dp"
                    android:layout_height="57dp"
                    android:layout_above="@id/ad_sponsored"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ad_sponsored"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="5dp"
                    android:text="Sponsored"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/ad_media"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/ad_bottom_info_layout"
                android:layout_below="@id/ad_brand_name"
                android:layout_marginTop="7dp"
                android:background="#ffffff"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/ad_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_alignBottom="@id/ad_media"
                android:layout_alignStart="@id/ad_media"/>

            <TextView
                android:id="@+id/ad_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ad_media"
                android:layout_alignParentStart="true"
                android:layout_marginTop="3dp"
                android:padding="8dp"
                android:textColor="#000000"
                android:textAlignment="center"
                android:fontFamily="@font/nunito_semibold"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/ad_stars"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_body"
                android:layout_centerHorizontal="true"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ad_card_seller_logo"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_alignEnd="@id/ad_media"
                android:layout_alignBottom="@id/ad_media"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="-45dp"
                app:civ_border_color="@color/borderLine"
                app:civ_border_width="2.5dp" />

            <View
                android:id="@+id/item_swipe_right_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:alpha="0" />

            <View
                android:id="@+id/item_swipe_left_indicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="left"
                android:layout_margin="10dp"
                android:alpha="0"
                android:fontFamily="@font/nunito_semibold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</com.google.android.gms.ads.formats.UnifiedNativeAdView>