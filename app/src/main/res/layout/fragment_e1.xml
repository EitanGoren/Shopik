<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".explanation.E1Fragment"
    android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <RelativeLayout
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    android:layout_marginTop="10dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/progressBar_recycler_e1"
                        android:scrollbarFadeDuration="6"
                        android:scrollbars="horizontal"
                        android:overScrollMode="always"
                        android:scrollbarStyle="outsideOverlay"
                        android:scrollbarSize="2dp"/>

                    <ProgressBar
                        android:id="@+id/progressBar_recycler_e1"
                        android:layout_width="410dp"
                        android:layout_height="15dp"
                        android:visibility="gone"
                        tools:visibility="visible"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:indeterminate="true"
                        android:layout_below="@id/best_sellers">
                    </ProgressBar>

                    <TextView
                        android:id="@+id/best_sellers"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text="Hot Trending"
                        android:fontFamily="@font/nunito_bold"
                        android:drawableEnd="@drawable/ic_loyalty_red"
                        android:drawablePadding="10dp"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginStart="15dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical" />

                    <TextView
                        android:id="@+id/best_sellers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginBottom="5dp"
                        android:layout_toEndOf="@id/best_sellers"
                        android:layout_marginStart="5dp"
                        android:gravity="center_vertical"
                        android:layout_alignBottom="@id/best_sellers"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/layout1"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/textview_border_line">

                    <TextView
                        android:id="@+id/text_btn1"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="2.3dp"
                        android:layout_marginBottom="2.3dp"
                        android:padding="20dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/text_header1"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="2.3dp"
                        android:layout_marginBottom="2.3dp"
                        android:textAlignment="center"
                        android:background="#40000000"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#ffffff"
                        android:textSize="45sp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"

                    android:background="@drawable/textview_border_line">

                    <TextView
                        android:id="@+id/text_btn2"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="2.3dp"
                        android:layout_marginBottom="2.3dp"
                        android:padding="20dp"
                        android:gravity="center"/>

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/text_header2"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:layout_marginTop="2.3dp"
                        android:layout_marginBottom="2.3dp"
                        android:textAlignment="center"
                        android:background="#40000000"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="40dp"
                    android:elevation="10dp"
                    android:translationZ="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    android:background="@drawable/textview_border_line">

                    <TextView
                        android:id="@+id/text_btn3"
                        android:layout_centerInParent="true"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:gravity="center" />

                    <TextView
                        android:layout_centerInParent="true"
                        android:id="@+id/text_header3"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:layout_marginTop="2.3dp"
                        android:layout_marginBottom="2.3dp"
                        android:textAlignment="center"
                        android:background="#40000000"
                        android:textStyle="bold"
                        android:padding="20dp"
                        android:gravity="center"
                        android:fontFamily="@font/roboto_thin"
                        android:textColor="#ffffff"
                        android:textSize="45sp" />

                </RelativeLayout>

            </RelativeLayout>

        </ScrollView>

</LinearLayout>