<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root"
    android:background="#ffffff"
    android:animateLayoutChanges="true"
    tools:context=".genderFilteringPages.HotTrendingFragment"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="#00ffffff"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            android:elevation="15dp"
            app:contentScrim="#888888"
            app:layout_scrollFlags="scroll|enterAlwaysCollapsed|snap"
            app:layout_collapseMode="parallax"
            app:statusBarScrim="@color/fragmentBackground">

            <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/martel_sans"
                android:gravity="center"
                android:padding="5dp"
                android:background="@drawable/multicolor_bg"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#ffffff"
                android:textSize="16sp"
                app:layout_collapseMode="parallax" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ffffff">

            <RelativeLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="380dp"
                android:layout_below="@id/grid_layout"
                android:layout_marginBottom="20dp"
                android:animateLayoutChanges="true"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:id="@+id/header_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="35dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="15dp"
                        android:contentDescription="@string/users_choice"
                        android:src="@drawable/ic_favorite_black_24dp" />

                    <TextView
                        android:id="@+id/best_sellers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/nunito_bold"
                        android:padding="5dp"
                        android:text="@string/hot_trending"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/best_sellers_count"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:fontFamily="@font/nunito_bold"
                        android:gravity="bottom"
                        android:paddingBottom="3dp"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/seperator_line1"
                    android:layout_width="100dp"
                    android:layout_height="1.2dp"
                    android:layout_below="@id/header_layout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/multicolor2" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/seperator_line1"
                    android:layout_margin="7dp"
                    android:background="#00ffffff"
                    android:scrollbars="none"
                    app:layout_collapseMode="parallax" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/new_in_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_new"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="25dp"
                    android:contentDescription="@string/users_choice"
                    android:src="@drawable/ic_baseline_notifications_active_24" />

                <TextView
                    android:id="@+id/new_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nunito_bold"
                    android:padding="5dp"
                    android:text="@string/new_in"
                    android:textColor="#000000"
                    android:textSize="26sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/seperator_line"
                android:layout_width="100dp"
                android:layout_height="1.2dp"
                android:layout_below="@id/new_in_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/multicolor2" />

            <GridLayout
                android:id="@+id/grid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/seperator_line"
                android:layout_centerHorizontal="true"
                android:fitsSystemWindows="true"
                android:columnCount="2"
                android:rowCount="4">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="195dp"
                    android:layout_height="250dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="end|top"
                    android:backgroundTint="#25000000"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:focusable="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:foreground="?attr/selectableItemBackgroundBorderless">

                        <ImageView
                            android:id="@+id/text_btn1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/castro_new"
                            android:gravity="center"
                            android:scaleType="centerCrop"
                            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                        <TextView
                            android:id="@+id/text_header1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#66000000"
                            android:fontFamily="@font/roboto_thin"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="#ffffff"
                            android:textSize="26sp"
                            android:textStyle="bold"
                            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

                    </RelativeLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="195dp"
                    android:layout_height="250dp"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="start|top"
                    android:backgroundTint="#25000000"
                    android:clickable="true"
                    android:elevation="10dp"
                    android:focusable="true"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
