<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <!--  <com.eitan.shopik.Adapters.NonSwipeableViewPager
            android:id="@+id/image_viewPager"
            android:layout_width="wrap_content"
            android:layout_height="435dp"
            android:background="@drawable/top_border_line"
            android:paddingTop="2dp"/> -->

        <RelativeLayout
            android:id="@+id/image_viewPager"
            android:layout_width="wrap_content"
            android:layout_height="435dp"
            android:background="@drawable/top_border_line"
            android:paddingTop="2dp">

            <ImageView
                android:id="@+id/image_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/previous"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:background="#00FFFFFF" />

            <Button
                android:id="@+id/next"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/fullscreen_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/ic_fullscreen_black"
            android:scaleType="centerCrop"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="7dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/image_viewPager"/>

        <ImageView
            android:id="@+id/list_item_favourite_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"
            android:layout_alignStart="@id/image_viewPager"
            android:layout_alignTop="@id/image_viewPager"
            android:src="@drawable/ic_favorite_black_24dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/swipe_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo"
            android:text="SALE"
            android:paddingStart="5dp"
            android:layout_marginEnd="5dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#FF0000"
            android:textSize="30sp"
            android:layout_alignTop="@id/image_viewPager"
            android:layout_alignEnd="@id/image_viewPager"
            android:translationZ="10dp"
            android:elevation="10dp"
            android:visibility="invisible"
            android:background="@color/colorTransparentWhite"/>

        <RelativeLayout
            android:id="@+id/item_info_social"
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:layout_below="@id/image_viewPager"
            android:background="@drawable/textview_border_line" >

                <TextView
                    android:id="@+id/seller_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="3dp"
                    android:elegantTextHeight="true"
                    android:fontFamily="@font/nunito_bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="5dp"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/list_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="12dp"
                    android:layout_toEndOf="@id/list_like"
                    android:fontFamily="@font/nunito_bold"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginBottom="3dp"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/old_price_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="3dp"
                    android:layout_toEndOf="@id/list_item_price"
                    android:fontFamily="@font/nunito_semibold"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:visibility="invisible"/>

                <TextView
                    android:id="@+id/list_unlike"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:drawableLeft="@drawable/ic_thumb_down_pink"
                    android:drawablePadding="5dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:theme="@style/Buttons" />

                <TextView
                    android:id="@+id/list_like"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:layout_toEndOf="@id/list_unlike"
                    android:drawableLeft="@drawable/ic_thumb_up_seleste"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:elevation="5dp"
                    android:translationZ="5dp"
                    android:text="0"
                    android:textColor="#000000"
                    android:theme="@style/Buttons" />

                <TextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/list_item_buy_button"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_above="@id/item_count"
                    android:layout_marginEnd="3dp"
                    android:layout_marginBottom="5dp"
                    android:elevation="10dp"
                    android:text="Shop"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:translationZ="10dp" />

        </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/seller_logo2"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignBottom="@id/image_viewPager"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="-50dp"
            android:padding="10dp"
            app:civ_border_color="@color/borderLine"
            app:civ_border_width="2dp" />

</RelativeLayout>