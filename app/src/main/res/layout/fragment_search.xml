<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="10dp"
    android:translationZ="10dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/multicolor_bg"
            android:fitsSystemWindows="true"
            android:minHeight="?actionBarSize"
            app:contentScrim="@drawable/multicolor_bg"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:statusBarScrim="@drawable/multicolor_bg">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="pin"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingStart="10sp"
                    android:paddingEnd="10dp"
                    android:textAlignment="center"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    app:layout_collapseMode="pin"/>

            </androidx.appcompat.widget.Toolbar>

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                app:layout_collapseMode="parallax">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="7dp"
                    app:layout_collapseMode="parallax">

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/all_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/all"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/match_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/match"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/percent"
                                app:chipIconTint="#000000"
                                app:chipStartPadding="10dp"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/price_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/price"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/ic_attach_money_black_24dp"
                                app:chipIconTint="#0F9815"
                                app:chipStartPadding="10dp"/>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/sale_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/Sale"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/sale1"
                                app:chipIconTint="#000000"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/favorites_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/favorites"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/ic_favorite_black_24dp"
                                app:chipIconTint="#FF0000"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/company_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/company"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/ic_local_mall_black_24dp"
                                app:chipIconTint="#000000"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/brand_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/brand"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipIcon="@drawable/ic_loyalty_red"
                                app:chipIconTint="#000000"
                                app:chipStartPadding="10dp" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/asos_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/asos"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#ffffff"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/tfs_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/tfs"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/castro_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/castro"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/hoodies_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/hoodies"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/renuar_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/renuar"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/tx_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/terminal_x"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />
                            <com.google.android.material.chip.Chip
                                android:id="@+id/aldo_chip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:checkable="true"
                                android:text="@string/aldo"
                                android:textColor="#000000"
                                android:textSize="15sp"
                                app:chipBackgroundColor="#FFFFFF"
                                app:chipCornerRadius="15dp"
                                app:chipEndPadding="10dp"
                                app:chipStartPadding="10dp" />

                        </LinearLayout>

                    </HorizontalScrollView>

                </com.google.android.material.chip.ChipGroup>

            </RelativeLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/grid_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1F1F1"
        android:columnWidth="240dp"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scroll_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="15dp"
        android:fadingEdge="vertical"
        android:theme="@style/Widget.Design.FloatingActionButton"
        android:fadingEdgeLength="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
        app:backgroundTint="#ffffff"
        app:borderWidth="1.5dp"
        app:elevation="5dp"
        app:fabSize="mini" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scroll_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="70dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
        android:theme="@style/Widget.Design.FloatingActionButton"
        app:backgroundTint="#ffffff"
        app:elevation="5dp"
        app:fabSize="mini"
        app:borderWidth="1.5dp"
        />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/explore_items"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_margin="15dp"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="20dp"
        android:padding="10dp"
        android:text="@string/more"
        android:textAlignment="center"
        android:textSize="12sp"
        android:theme="@style/Widget.Design.FloatingActionButton"
        app:backgroundTint="#FFFFFF"
        app:elevation="10dp"
        app:icon="@drawable/ic_baseline_add"
        app:iconPadding="10dp"
        app:useCompatPadding="true"
        tools:visibility="visible"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
