<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.FullscreenImageActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/fullscreen_image_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/buttons_layout"
        android:layout_width="310dp"
        android:layout_height="57dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="-25dp"
        android:background="@color/colorTransparentWhite"
        app:cardCornerRadius="20dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:paddingStart="30dp"
            android:elevation="5dp"
            android:paddingEnd="20dp"
            android:translationZ="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:fontFamily="cursive"
                android:text="@string/app_name"
                android:textColor="#ffffff"
                android:textSize="26sp"
                tools:ignore="RelativeOverlap" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="#00FFFFFF"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fullscreen_dot_1"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginEnd="7dp"
                    android:contentDescription="@string/dot"
                    android:src="@drawable/ic_baseline_panorama_fish_eye" />

                <ImageView
                    android:id="@+id/fullscreen_dot_2"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:contentDescription="@string/dot"
                    android:src="@drawable/ic_baseline_panorama_fish_eye"/>

                <ImageView
                    android:id="@+id/fullscreen_dot_3"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:contentDescription="@string/dot"
                    android:src="@drawable/ic_baseline_panorama_fish_eye"/>

                <ImageView
                    android:id="@+id/fullscreen_dot_4"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:contentDescription="@string/dot"
                    android:src="@drawable/ic_baseline_panorama_fish_eye" />

                <ImageView
                    android:id="@+id/fullscreen_dot_5"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="7dp"
                    android:contentDescription="@string/dot"
                    android:src="@drawable/ic_baseline_panorama_fish_eye" />

            </LinearLayout>

         </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/comp_info"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="13dp"
        app:cardCornerRadius="20dp"
        android:background="@color/colorTransparentWhite"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:elevation="5dp"
            android:padding="3dp"
            android:translationZ="5dp">

            <TextView
                android:id="@+id/comp_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/comp_logo"
                android:layout_marginEnd="5dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="17sp"
                android:transitionName="company_name" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/comp_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="25dp"
                android:contentDescription="@string/image_item"
                android:scaleType="centerCrop"
                android:transitionName="company_logo"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/favorite_sign"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/buttons_layout"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_favorite_black_24dp"
        android:contentDescription="@string/favorite"
        android:visibility="invisible" />

    <androidx.cardview.widget.CardView
        android:id="@+id/close_card"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="15dp"
        android:padding="5dp">

        <Button
            android:id="@+id/fullscreen_close_x"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:elevation="5dp"
            android:text="@string/x"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:translationZ="5dp" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>