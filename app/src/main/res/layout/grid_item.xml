<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00FFFFFF" >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/image_viewPager"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:paddingRight="3dp"
        android:paddingLeft="3dp"
        android:layout_below="@id/seller_name"
        android:background="#00FFFFFF" />

    <TextView
        android:id="@+id/seller_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:fontFamily="@font/nunito_semibold"
        android:textAlignment="center"
        android:layout_alignStart="@id/image_viewPager"
        android:layout_alignEnd="@id/image_viewPager"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:background="#72000000"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_item_buy_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seller_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="Shop"
        android:textColor="#ffffff"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:background="@drawable/jeans_fit_background"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/grid_item_favourite_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignStart="@id/image_viewPager"
        android:layout_below="@id/list_item_buy_button"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_favorite_black_24dp"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/fullscreen_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_fullscreen_black"
        android:layout_marginEnd="3dp"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/price"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_viewPager"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#8F2727"
        android:textSize="20sp"
        android:background="#8CFFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/percentage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@id/image_viewPager"
        android:layout_alignEnd="@id/image_viewPager"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:visibility="invisible"
        tools:visibility="visible"
        android:background="@drawable/round_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/image_viewPager"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/image_viewPager"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="5dp"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>