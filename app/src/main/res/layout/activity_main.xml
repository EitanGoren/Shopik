    <com.google.android.material.tabs.TabLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#FFFFFF"
        android:elevation="25dp"
        android:scrollbars="horizontal"
        android:soundEffectsEnabled="true"
        android:layout_alignParentBottom="true"
        android:translationZ="25dp"
        app:tabGravity="fill"
        app:tabIconTint="#000000"
        app:tabIndicatorColor="@color/SplashScreenBackground"
        app:tabIndicatorGravity="top"
        app:tabIndicatorHeight="3.5dp"
        app:tabMode="fixed"
        app:tabPaddingBottom="3dp"
        app:tabPaddingTop="8dp"
        app:tabSelectedTextColor="#000000"
        app:tabTextAppearance="@style/MineCustomTabText">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/top_swipes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contextClickable="true"
            android:icon="@drawable/ic_outline_touch_app_24"
            android:tag="swipes"
            android:text="Swipes"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/top_favorites"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_outline_favorite_border_24"
            android:tag="favorites"
            android:text="Favorites"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/top_suggestion"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:contextClickable="true"
            android:icon="@drawable/ic_outline_thumbs_up_down_24"
            android:tag="suggested"
            android:text="Suggested"/>

        <com.google.android.material.tabs.TabItem
            android:id="@+id/top_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:icon="@drawable/ic_search"
            android:tag="all items"
            android:text="All items"/>

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/customer_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/top_nav"
        android:layout_below="@id/customer_toolbar"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="410dp"
        android:layout_height="25dp"
        android:layout_marginTop="-10dp"
        android:visibility="gone"
        android:layout_below="@id/customer_toolbar"
        tools:visibility="visible"
        android:fitsSystemWindows="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true">
    </ProgressBar>

</RelativeLayout>