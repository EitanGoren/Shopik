<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".Customer.CustomerMainActivity">

    <RelativeLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/botton_nav"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:fitsSystemWindows="true"
            android:paddingBottom="2dp"
            android:translationZ="5dp"
            app:elevation="20dp"
            app:itemIconSize="28sp"
            app:itemRippleColor="@color/SplashScreenBackground"
            android:clipToPadding="true"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@drawable/bottom_nav_tab_selected"
            app:itemTextColor="@drawable/bottom_nav_tab_selected"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior"
            app:menu="@menu/bottom_nav_menu">
        </com.google.android.material.bottomnavigation.BottomNavigationView>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/customer_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/botton_nav"
            android:layout_below="@id/customer_toolbar"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-4dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />

        <com.google.android.material.progressindicator.ProgressIndicator
            android:id="@+id/top_progress_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_toolbar"
            android:indeterminate="false"
            app:indicatorColor="#0D6DC1"
            app:indicatorWidth="5dp"
            app:trackColor="#ffffff"
            tools:visibility="visible" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/customer_toolbar"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:background="#ffffff"
            android:clipToPadding="true"
            android:elevation="10dp"
            android:minHeight="65dp"
            android:translationZ="5dp"
            app:navigationIcon="@drawable/ic_menu_34"
            app:theme="@style/ThemeOverlay.AppCompat.Light"
            app:title="@string/app_name"
            app:titleMarginStart="5dp"
            app:titleTextAppearance="@style/MainTitle"
            app:titleTextColor="@color/SplashScreenBackground">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="start">

                <ImageView
                    android:id="@+id/logo_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/tooki"
                    android:transitionName="tooki" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

