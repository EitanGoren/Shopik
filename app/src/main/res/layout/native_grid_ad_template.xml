<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="7dp"
    android:translationZ="7dp"
    android:background="#00FFFFFF">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="5dp"
        android:elevation="7dp"
        android:translationZ="7dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF">

            <com.google.android.gms.ads.formats.MediaView
                android:id="@+id/ad_media"
                android:layout_width="match_parent"
                android:layout_height="135dp"
                android:layout_below="@+id/logo_layout"
                android:layout_marginTop="-15dp"
                android:background="#ffffff"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:id="@+id/logo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ad_logo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:elevation="1.5dp"
                    android:scaleType="centerCrop"
                    android:translationZ="1.5dp"/>

                <TextView
                    android:id="@+id/ad_card_seller_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="3dp"
                    android:layout_toStartOf="@id/Ad"
                    android:layout_toEndOf="@id/ad_logo"
                    android:fontFamily="@font/martel_sans"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/Ad"
                    style="@style/AppTheme.AdAttribution"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/martel_sans"
                    tools:visibility="visible"/>

            </RelativeLayout>

            <RatingBar
                android:id="@+id/ad_stars"
                style="?attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/ad_media"
                android:layout_alignBottom="@id/ad_media"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5" />

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_media"
                android:layout_margin="2dp"
                android:orientation="vertical"
                android:padding="3dp">

                <TextView
                    android:id="@+id/ad_brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/martel_sans"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/ad_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/martel_sans"
                    android:textAlignment="viewStart"
                    android:textSize="15sp"
                    tools:visibility="visible"/>

                <TextView
                    android:id="@+id/ad_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/martel_sans"
                    android:padding="2dp"
                    android:textAlignment="viewStart"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ad_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/martel_sans"
                    android:textAlignment="viewStart"
                    android:textSize="14sp"/>

                <com.google.android.gms.ads.formats.AdChoicesView
                    android:id="@+id/ad_choice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

            </LinearLayout>

            <Button
                android:id="@+id/ad_action_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/info_layout"
                android:fontFamily="@font/martel_sans"
                android:elevation="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:theme="@style/GridAdButtons"
                android:text="Click"
                android:translationY="5dp"
                android:translationZ="5dp" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>