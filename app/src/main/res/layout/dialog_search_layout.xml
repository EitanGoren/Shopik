<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="310dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CustomerFragments.SearchFragment"
    android:layout_marginTop="15dp"
    app:layout_goneMarginBottom="15dp">

    <TextView
        android:id="@+id/search_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/comfortaa"
        android:textSize="30sp"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_header"
        app:cardCornerRadius="22dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="15dp">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/search_examples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_card"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/comfortaa"
        android:textSize="16sp"
        android:textStyle="normal"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/items_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_examples"
        android:fontFamily="@font/comfortaa"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:textColor="#FFFFFF"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>