<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="245dp"
        app:cardCornerRadius="8dp"
        android:background="#00FFFFFF"
        android:layout_margin="7.5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4E4E4E">

            <ImageView
                android:id="@+id/image_slider"
                android:layout_width="match_parent"
                android:layout_height="215dp"
                android:layout_gravity="top"
                android:contentDescription="@string/image_slider"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/store_link"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:text="@string/shop"
                android:textStyle="bold"
                android:textColor="#000000"
                android:background="@color/fui_transparent"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/sale"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textAllCaps="true"
                android:text="@string/sale"
                android:textSize="16sp"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:textColor="#E91E63"/>

            <Button
                android:id="@+id/fullscreen_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/ic_fullscreen_black"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignBottom="@id/image_slider"
                android:layout_alignEnd="@id/image_slider"/>

            <TextView
                android:id="@+id/slider_brand"
                android:layout_width="85dp"
                android:layout_height="30dp"
                android:fontFamily="@font/nunito_semibold"
                android:textAlignment="viewStart"
                android:gravity="start|center_vertical"
                android:background="#4E4E4E"
                android:textColor="#ffffff"
                android:layout_marginStart="5dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/reduced_price"
                android:layout_width="115dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/nunito_semibold"
                android:textAlignment="viewEnd"
                android:gravity="end|center_vertical"
                android:background="#4E4E4E"
                android:textColor="#ffffff"
                android:visibility="invisible"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@id/slider_brand"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:id="@+id/new_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignStart="@id/image_slider"
                android:layout_alignTop="@id/image_slider"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_new"
                android:scaleType="centerCrop"
                android:contentDescription="@string/new_ic"
                android:visibility="invisible">

            </ImageView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>