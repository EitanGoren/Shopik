<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".explanation.E3Fragment">

    <TextView
        android:id="@+id/best_sellers2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/nunito_bold"
        android:drawableEnd="@drawable/ic_whatshot_red"
        android:drawablePadding="10dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:gravity="top" />

    <TextView
        android:id="@+id/items_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/best_sellers2"
        android:fontFamily="@font/nunito_bold"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar_e3"
        android:numColumns="2"
        android:columnWidth="220dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:stretchMode="columnWidth"
        android:background="#00FFFFFF" />

    <ProgressBar
        android:id="@+id/progressBar_e3"
        android:layout_width="410dp"
        android:layout_height="17dp"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_below="@id/best_sellers2">
    </ProgressBar>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardUseCompatPadding="true"
        android:backgroundTint="@color/SplashScreenBackground"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        app:cardElevation="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#993E3E3E"
        tools:visibility="visible">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:inputType="text"
            app:closeIcon="@drawable/ic_close_black"
            app:searchIcon="@drawable/ic_search"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>