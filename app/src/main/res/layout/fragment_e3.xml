<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_marginTop="5dp"
    tools:context=".GenderFilteringPages.OutletsFragment">

    <TextView
        android:id="@+id/best_sellers2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:letterSpacing="0.1"
        android:fontFamily="@font/nunito_bold"
        android:drawableEnd="@drawable/ic_whatshot_red"
        android:drawablePadding="10dp"
        android:paddingTop="5dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:gravity="top" />

    <TextView
        android:id="@+id/items_count"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/best_sellers2"
        android:fontFamily="@font/nunito_bold"
        android:paddingTop="5dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/items_total"
        android:layout_width="50dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/items_count"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/items_count"
        android:numColumns="2"
        android:columnWidth="220dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="10dp"
        android:stretchMode="columnWidth"
        android:background="#00FFFFFF" />

</RelativeLayout>