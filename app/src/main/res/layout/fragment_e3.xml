<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".explanation.E3Fragment">

    <TextView
        android:id="@+id/best_sellers2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:fontFamily="@font/nunito_bold"
        android:drawableEnd="@drawable/ic_whatshot_red"
        android:drawablePadding="10dp"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:gravity="top" />

    <TextView
        android:id="@+id/items_count"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/best_sellers2"
        android:fontFamily="@font/nunito_bold"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:gravity="center_vertical" />

    <GridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/progressBar_e3"
        android:numColumns="2"
        android:columnWidth="220dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:stretchMode="columnWidth"
        android:background="#00FFFFFF" />

    <ProgressBar
        android:id="@+id/progressBar_e3"
        android:layout_width="410dp"
        android:layout_height="17dp"
        android:visibility="gone"
        tools:visibility="visible"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_below="@id/best_sellers2">
    </ProgressBar>

    <LinearLayout
        android:id="@+id/more_options_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_above="@id/main_fab"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginBottom="10dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            android:visibility="gone"
            tools:visibility="visible"
            app:tint="#2196F3"
            app:rippleColor="#2196F3"
            android:tooltipText="Clear search"
            app:srcCompat="@drawable/ic_close_black" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            app:tint="#2196F3"
            app:rippleColor="#2196F3"
            android:visibility="gone"
            tools:visibility="visible"
            android:tooltipText="Load 5 more pages"
            app:srcCompat="@drawable/ic_baseline_add" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="4dp"
            app:backgroundTint="#FFFFFF"
            app:fabSize="mini"
            app:tint="#2196F3"
            app:rippleColor="#2196F3"
            android:visibility="gone"
            tools:visibility="visible"
            android:tooltipText="Filter items"
            app:srcCompat="@drawable/ic_search" />

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        app:backgroundTint="#FFFFFF"
        app:fabCustomSize="54dp"
        app:iconTint="#2196F3"
        android:text="Options"
        android:textAllCaps="true"
        app:strokeColor="#2196F3"
        android:textColor="#000000"
        android:tooltipText="More options"
        app:icon="@drawable/ic_baseline_expand_less"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="22dp"
        app:cardUseCompatPadding="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/main_fab"
        app:cardElevation="8dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="5dp"
            android:visibility="gone"
            android:backgroundTint="#BFFFFFFF"
            tools:visibility="visible"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>