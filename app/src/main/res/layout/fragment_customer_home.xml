<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".CustomerFragments.CustomerHomeFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="30dp"
        android:layout_centerInParent="true"
        android:indeterminate="true"
        tools:visibility="visible"
        android:visibility="invisible"
        android:background="@color/fui_transparent"
        style="@android:style/Widget.ProgressBar.Large.Inverse"
        android:indeterminateDrawable="@drawable/my_progress_indeterminate" />

    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:rotation_degrees="15.5"
        app:max_visible="2"
        tools:context=".Customer.CustomerMainActivity" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/no_cards_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_sad_face"
            android:padding="40dp"
            android:text="@string/items_run_out"
            android:textColor="#00BCD4"
            android:textSize="50sp"
            android:elevation="20dp"
            android:translationZ="20dp"
            android:textStyle="italic"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/list_sad_face"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>

    </RelativeLayout>

</RelativeLayout>