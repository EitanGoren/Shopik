<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#DC333333</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark"> #ffffff </item>

        <item name="colorAccent">#000000</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
    </style>

    <style name="MainStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#DC333333</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
    </style>

    <style name="AppTheme.Fullscreen">
    </style>

    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">@color/colorTransparentWhite</item>
        <item name="colorPrimaryDark">@color/colorTransparentWhite</item>
        <item name="colorAccent">@color/colorTransparentWhite</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#000000</item>
        <item name="selectorSize">28dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/cambay_bold</item>
    </style>

    <style name="RatingBarLight" parent="Theme.AppCompat">
        <item name="colorControlNormal">#AEAEAE</item>
        <item name="colorControlActivated">#EDF7FF</item>
    </style>

    <style name="RatingBarDark" parent="Theme.AppCompat">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#2B7BBD</item>
    </style>

    <style name="Buttons" parent="Theme.AppCompat">
        <item name="colorControlNormal">#00FFFFFF</item>
        <item name="colorControlActivated">#00FFFFFF</item>
        <item name="colorPrimary">#00FFFFFF</item>

    </style>

    <style name="EntranceButtons" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
    </style>

    <style name="GridBuyButtons" parent="Theme.AppCompat">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:fontFamily">font/nobile</item>
        <item name="android:text">BUY NOW</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridAdButtons" parent="Theme.AppCompat">
        <item name="colorPrimary">#DADADA</item>
    </style>

    <style name="MainActivity" parent="Theme.AppCompat">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>

    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SignInStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#000000</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="FavoriteSwipeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">AD</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="AppTheme.AdAttributionLarge">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">AD</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="MainTitle" >
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
