<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#ffffff</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">@color/CollapsedBackground</item>
        <item name="colorControlActivated">#2B7BBD</item>

        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>

        <item name="colorAccent">#000000</item>
        <!-- android:textColorSecondary is the color of the menu overflow icon (three vertical dots) -->
    </style>

    <style name="farts" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">#292929</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:navigationBarColor">#292929</item>
        <item name="colorControlActivated">#2B7BBD</item>

        <!-- line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>

        <item name="colorAccent">#000000</item>
    </style>

    <style name="RatingBarLight" parent="Theme.AppCompat">
        <item name="colorControlNormal">#AEAEAE</item>
        <item name="colorControlActivated">#EDF7FF</item>
    </style>

    <style name="RatingBarDark" parent="Theme.AppCompat">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">#2B7BBD</item>
    </style>

    <style name="Buttons" parent="Theme.AppCompat">
        <item name="colorControlNormal">#00FFFFFF</item>
        <item name="colorControlActivated">#00FFFFFF</item>
        <item name="colorPrimary">#00FFFFFF</item>

    </style>

    <style name="EntranceButtons" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>

    </style>

    <style name="MainActivity" parent="Theme.AppCompat">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#ffffff</item>
        <item name="colorPrimary">#ffffff</item>

    </style>

    <style name="MyTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyTabTextAppearance</item>
    </style>

    <style name="MyTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#000000</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="SignInStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/SignInColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowActionBar">true</item>
        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#000000</item>
        <item name="android:navigationBarColor">#000000</item>
        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="FavoriteSwipeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:text">AD</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFCC66</item>
    </style>

</resources>
