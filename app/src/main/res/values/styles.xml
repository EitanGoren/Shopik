<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#DC333333</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark"> #ffffff </item>
        <item name="colorAccent">#ffffff</item>

    </style>

    <style name="MainStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#DC333333</item>
        <item name="android:navigationBarColor">#000000</item>
        <item name="colorControlActivated">#000000</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>

    <style name="AppTheme.Fullscreen">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimaryDark"> #ffffff </item>
        <item name="colorAccent">#ffffff</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">#000000</item>
        <item name="selectorSize">24dp</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Buttons" parent="Theme.AppCompat">
        <item name="colorControlNormal">#00FFFFFF</item>
        <item name="colorControlActivated">#00FFFFFF</item>
        <item name="colorPrimary">#00FFFFFF</item>

    </style>

    <style name="GridBuyButtons" parent="Theme.AppCompat">
        <item name="colorPrimary">#F4F4F4</item>
        <item name="android:text">BUY NOW</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GridAdButtons" parent="Theme.AppCompat">
        <item name="colorPrimary">#DADADA</item>
    </style>

    <style name="SignInStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- navigation buttons etc.. -->
        <item name="colorPrimary">#000000</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <!-- to line of phone, clock... -->
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="AlertDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_pop_exit_anim</item>
    </style>

    <style name="FavoriteSwipeAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="AppTheme.AdAttribution">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">AD</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="AppTheme.AdAttributionLarge">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:text">AD</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">#FFCC66</item>
    </style>

    <style name="MainTitle" >
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainSubtitle" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MainGreeting" >
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>
